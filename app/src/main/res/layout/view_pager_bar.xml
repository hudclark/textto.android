<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/view_pager_indicator_two"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/ic_indicator_selected" />

    <ImageView
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/view_pager_indicator_two"
        android:id="@+id/view_pager_indicator_one"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/ic_indicator_selected" />

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_pager_indicator_two"
        android:id="@+id/view_pager_indicator_three"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/ic_indicator_selected" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:tint="@color/white" />

</RelativeLayout>