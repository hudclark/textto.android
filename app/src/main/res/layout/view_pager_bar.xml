<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/view_pager_indicator_two"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_indicator_selected" />

    <ImageView
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/view_pager_indicator_two"
        android:id="@+id/view_pager_indicator_one"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_indicator_selected" />

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_pager_indicator_two"
        android:id="@+id/view_pager_indicator_three"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_indicator_selected" />

</RelativeLayout>