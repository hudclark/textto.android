<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    tools:context="com.octopusbeach.textto.home.MainActivity">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigoBackground"
        android:paddingBottom="100dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="64dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Hudson Clark" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            tools:text="hudson@textto.io" />

        <Button
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_email"
            android:layout_marginTop="16dp"
            android:minHeight="32dp"
            android:textAllCaps="false"
            android:background="@color/blue"
            android:text="@string/logout" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="128dp"
            android:layout_height="129dp"
            android:layout_alignParentRight="true"
            tools:src="@drawable/ic_logo" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/messages_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_layout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-38dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/messages"
                android:textColor="@color/textDark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/messages_last_synced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:textColor="@color/textDark"
                android:textSize="12sp"
                tools:text="Last Synced: 1 day ago" />

            <Button
                android:id="@+id/messages_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/blue"
                android:minHeight="32dp"
                android:text="@string/sync"
                android:textAllCaps="false" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messages_card"
        android:id="@+id/contacts_card"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts"
                android:textColor="@color/textDark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/contacts_last_synced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:textColor="@color/textDark"
                android:textSize="12sp"
                tools:text="Last Synced: 1 day ago" />

            <Button
                android:id="@+id/contacts_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/blue"
                android:minHeight="32dp"
                android:text="@string/sync"
                android:textAllCaps="false" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@id/contacts_card"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:textColor="@color/textDark"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:text="@string/visit"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:autoLink="web"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/contact_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="@string/contact_support"
        android:textColor="@color/blue" />

</RelativeLayout>
