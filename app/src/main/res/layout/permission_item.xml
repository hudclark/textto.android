<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/permission_item_image"
        tools:src="@drawable/ic_text"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/permission_item_title"
        android:textStyle="bold"
        tools:text="@string/text_permission_title"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/permission_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        tools:text="@string/text_permission_message"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/permission_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>